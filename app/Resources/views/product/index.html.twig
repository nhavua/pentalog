{% extends 'base.html.twig' %}

{% block body %}
    <h1>Products list</h1>

    <table class="table table-bordered table-hover">
        <thead>
            <tr align="center">
                <th>Id</th>
                <th>Number</th>
                <th>Name</th>
                <th>Price</th>
                <th>Creation Date</th>
                <th>Edition Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td><a href="{{ path('products_show', { 'id': product.id }) }}">{{ product.id }}</a></td>
                <td>{{ product.number }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{% if product.creationDate %}{{ product.creationDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if product.editionDate %}{{ product.editionDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                            <a href="{{ path('products_show', { 'id': product.id }) }}"><i class="fa fa-eye"></i></a>
                            <a href="{{ path('products_edit', { 'id': product.id }) }}"><i class="fa fa-pencil-square-o"></i></a>
                            {{ form_start(deleteForms[product.id]) }}
                            <i class="fa fa-trash-o"></i>
                                <input type="submit" value="Delete">
                            {{ form_end(deleteForms[product.id]) }}
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('products_new') }}">Create a new product</a>
        </li>
    </ul>
{% endblock %}
